
// 清除浮动
.clearfix:after
  content ''
  display table
  clear both
  overflow hidden

// 文字超出 显示省略号
.ellipsis
  overflow hidden
  text-overflow ellipsis
  white-space nowrap

// 链接样式
a.text--link
  position relative
  text-decoration none

  &::after
    content ''
    width 100%
    height 1px /* 设置伪元素的高度，这里是下划线的粗细 */
    position absolute
    top 100%
    left 0
    background-color currentColor /* 当前标签继承的文字颜色，这里让伪元素的背景色与父元素的文字颜色相同 */
    transform scale(0)
    transition all 0.2s

  &:hover::after
    transform scale(1)
    transform-origin center

// 标签样式
.tag
  margin 0.1em 0.3em
  padding 0.3em 0.5em
  border-radius 0.2em
  font-size 0.8em
  text-align center
  vertical-align middle
  line-height 2
  color hsla(0, 0%, 100%, 0.8)
  background-color $textColor
  transition 0.3s cubic-bezier(0.25, 0.8, 0.5, 1), color 1ms

  &:hover
    cursor pointer
    color white
    box-shadow 0 3px 1px -2px rgba(0, 0, 0, 0.2), 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 1px 5px 0 rgba(0, 0, 0, 0.12)