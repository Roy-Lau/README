$body-font-family = -apple-system,Kaushan,Quicksand,Arial,Roboto,Oxygen,Ubuntu,Cantarell,Fira Sans,Droid Sans,Helvetica Neue,sans-serif;
$font-size-root = 16px
$line-height-root = 1.5
$card-border-radius = 4px

$contentClass = '.content__default'

$font-roboto = './fonts/roboto'
$font-code = Consolas, Kaushan, Quicksand, Arial, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace

$body-background = #f6f6f6
$primary-color = #3F51B5
$light-primary-color = lighten($primary-color, 50%)
$content-color = #4d4d4d
$gray-color = #fff
$link-color = #ff4081

$custom-blocks = {
  tip: #4caf50
  warning: #FF9800
  danger: #ff5722
}

$code-languages = {
  js: 'js' 'javascript'
  html: 'html' 'markup'
  md: 'md' 'markdown'
  vue: 'vue'
  css: 'css'
  less: 'less'
  sass: 'sass'
  scss: 'scss'
  stylus: 'stylus'
  jsx: 'jsx'
  ts: 'ts' 'typescript'
  json: 'json'
  yaml: 'yaml'
  bash: 'bash' 'shell' 'cmd'
  c: 'c'
  java: 'java'
  kotlin: 'kotlin'
  python: 'py' 'python'
  csharp: 'c#' 'csharp'
  go: 'go'
  sql: 'sql' 'mysql'
}

// colors
$accentColor = #3eaf7c
$textColor = #2c3e50
$borderColor = #eaecef
$codeBgColor = #282c34
$arrowBgColor = #ccc

// layout
$navbarHeight = 3.6rem
$sidebarWidth = 20rem
$contentWidth = 740px

/* Viewport */

// Grid
$grid := {
  xs: 0
  sm: 600px
  md: 960px
  lg: (1280px - 16px) // Desktop gets a 16dp reduction
  xl: (1920px - 16px) // https://material.io/guidelines/layout/responsive-ui.html#responsive-ui-breakpoints
}
// Display
$display := {
  print-only: "only print"
  screen-only: "only screen"
  xs-only: "only screen and (max-width: %s)" % ($grid.sm - 1)
  sm-only: "only screen and (min-width: %s) and (max-width: %s)" % ($grid.sm ($grid.md  - 1))
  sm-and-down: "only screen and (max-width: %s)" % ($grid.md - 1)
  sm-and-up: "only screen and (min-width: %s)" % $grid.sm
  md-only: "only screen and (min-width: %s) and (max-width: %s)" % ($grid.md ($grid.lg  - 1))
  md-and-down: "only screen and (max-width: %s )" % ($grid.lg - 1)
  md-and-up: "only screen and (min-width: %s)" % $grid.md
  lg-only: "only screen and (min-width: %s) and (max-width: %s)" % ($grid.lg ($grid.xl - 1))
  lg-and-down: "only screen and (max-width: (%s - 1))" % $grid.xl
  lg-and-up: "only screen and (min-width: %s)" % $grid.lg
  xl-only: "only screen and (min-width: %s)" % $grid.xl
}
